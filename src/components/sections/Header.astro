---
import { Icon } from "astro-icon/components";
import ThemeToggle from "../ThemeToggle.astro";

export const menuItems = [
  { name: 'About', href: '/' },
  { name: 'Blog', href: '/blogs' },
  { name: 'Contact', href: '/contact' }
];

export const linkItems = [
  { name: 'Github', href: 'https://github.com/zloom' },
  { name: 'Linkedin', href: 'https://www.linkedin.com/in/anton-zalialdinov-12212417a' },
  { name: 'Upwork', href: 'https://www.upwork.com/freelancers/~01ed6f4a80319e52b0' }
];
---

<header class="bg-background py-4">
  <div class="container max-w-6xl mx-auto flex justify-between items-center px-4 md:px-8">
    <!-- Logo -->
    <div class="text-2xl font-bold">
      <ThemeToggle />
    </div>
    
    <div class="flex gap-5">
      <!-- PC Menu -->
      <nav class="hidden sm:flex space-x-6 items-center">
        {menuItems.map((item) => (
          <a href={item.href} class="hover:text-offset">{item.name}</a>
        ))}
      </nav>

      <!-- Mobile Menu Button -->
      <div class="sm:hidden flex">
        <button id="menu-btn" class="focus:outline-none">
          <Icon name="Menu" class="size-6"/>
        </button>
      </div>

      <div class="w-full h-px mt-8 mb-5 xl:w-px xl:m-0 xl:h-6 bg-border"></div>

      <ul class="flex items-center justify-center space-x-8 xl:justify-end">
        {linkItems.map((item) => (
            <li>
                <a href={item.href} title={item.name} target="_blank" rel="noopener noreferrer" class="block transition-all duration-200 hover:text-opacity-80 focus:text-opacity-80">
                    <Icon name={item.name} />
                </a>
            </li>
          ))
        }
    </ul>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden sm:hidden">
    {menuItems.map((item) => (
      <a href={item.href} class="block px-4 py-2 hover:bg-background-offset">
        {item.name}
      </a>
    ))}
  </div>
</header>

<script>
  const menuBtn = document.getElementById('menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
